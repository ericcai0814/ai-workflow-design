{
  "$schema": "https://code.claude.com/schemas/settings.json",
  "_comment": "這是 ai-coding-workflow plugin 的設定範例。複製到專案的 .claude/settings.json 使用。",
  "permissions": {
    "allow": [
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(chmod:*)",
      "Bash(gh api:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:raw.githubusercontent.com)"
    ]
  },
  "extraKnownMarketplaces": {
    "ai-coding-workflow": {
      "source": {
        "source": "github",
        "repo": "ericcai0814/ai-workflow-design",
        "path": "plugins"
      }
    }
  },
  "enabledPlugins": {
    "ai-coding-workflow@ai-coding-workflow": true
  }
}
